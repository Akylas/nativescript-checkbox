{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "lib": ["es2017", "dom", "es6"],
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"],
      "@nstudio/nativescript-checkbox": ["../src"]
    }
  },
  "files": [
    "./app/main.ts",
    // OR this could be (depending on your projects setup [Use one or the other]):
    "./src/main.ts"
  ],
  "include": [
    "./references.d.ts",
    "../src/typings/BEMCheckBox.d.ts",
    "../src/checkbox.ios.ts",
    "../src/checkbox-common.ts"
    // "../src/checkbox.android.ts"
  ],
  "exclude": ["node_modules", "platforms", "**/*.aot", "e2e"]
}
