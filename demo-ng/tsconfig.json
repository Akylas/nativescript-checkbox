{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "lib": ["es6", "dom", "es2015.iterable"],
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"],
      "@nstudio/nativescript-checkbox": ["../src"]
    }
  },
  "files": ["../src/angular/index.ts", "./app/main.ts"],
  "include": [
    "./references.d.ts",
    "../src/typings/BEMCheckBox.d.ts",
    "../src/checkbox.ios.ts",
    "../src/checkbox-common.ts",
    // "../src/checkbox.android.ts"
  ],
  "exclude": ["node_modules", "platforms", "**/*.aot.ts"]
}
